<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Detail Skor | Penerapan Sistem Radio dan Televisi </title>
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/leaderboard/board.css" type="text/css">
  <!-- FontAweome CDN Link for Icons-->
</head>

<body>
  <div class="container">
    <div class="board">
      <a class="btn-back" href="/home"><i class="bi bi-arrow-left-short"></i>Halaman Utama</a>
      <h1>&#128081; Papan Skor &#128081;</h1>
      <div class="button-group" data-left="4px">
        <button onClick="buttonClick('4px')">Ranking</button>
        <button onClick="buttonClick('50%')">Skor Pengguna</button>
      </div>
      <div class="wrap-scroll">
        <table class="table allRank table-responsive">
          <thead class="table-warning">
            <tr>
              <!-- <th scope="col">Rank</th> -->
              <th scope="col">Username</th>
              <th scope="col">Kuis 1</th>
              <th scope="col">Kuis 2</th>
              <th scope="col">Kuis 3</th>
              <th scope="col">Evaluasi</th>
            </tr>
          </thead>
          <tbody class="table-group-divider">

            <% for(let user of users){ %>
              <tr>
                <!-- <th scope="row">
                1
              </th> -->
                <td>
                  <%= user.username %>
                </td>
                <td>
                  <%= user.quizOneScore %>
                </td>
                <td>
                  <%= user.quizTwoScore %>
                </td>
                <td>
                  <%= user.quizThreeScore %>
                </td>
                <td>
                  <%= user.evaluationScore %>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </div>

      <table class="table skorPengguna notVisible">
        <thead class="table-success">
          <tr>
            <th scope="col">Username</th>
            <th scope="col">Kuis 1</th>
            <th scope="col">Kuis 2</th>
            <th scope="col">Kuis 3</th>
            <th scope="col">Evaluasi</th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <% console.log(user) %>
            <tr>
              <td>
                <%= user[0].username %>
              </td>
              <td>
                <%= user[0].quizOneScore %>
              </td>
              <td>
                <%= user[0].quizTwoScore %>
              </td>
              <td>
                <%= user[0].quizThreeScore %>
              </td>
              <td>
                <%= user[0].evaluationScore %>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <!-- JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>
  <script src="/leaderboard/board.js"></script>
</body>

</html>